            <version>${jetty.version}</version>
            <type>jar</type>
        </dependency>
        <!-- commons lang dependency -->
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.6</version>
        </dependency>
        <dependency>
            <groupId>org.scalatra.socketio-java</groupId>
